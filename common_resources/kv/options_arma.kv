# Settings contents
<ArmaOptionsBox@BoxLayout>
    padding: 20
    orientation: 'vertical'
    size_hint: 1, None
    screen: None
    top: (root.screen.top if root.screen else 0)
    height: 504

    ScrollView:
        size_hint: 1, None
        height: 470
        bar_width: 12
        scroll_timeout: 100
        bar_inactive_color: 0.7, 0.7, 0.7, 0.5

        scroll_type: ['bars', 'content']

        GridLayout:
            #orientation: 'vertical'
            cols: 1
            #height: 1000
            height: self.minimum_height
            size_hint: 1, None

            Label:
                text: 'Non-Arma options:'
                size_hint: None, None
                size: self.texture_size[0], 30

            CheckLabel:
                text: 'Run TrackIR at game start (if installed)'
                settings_name: 'run_trackir'

            CheckLabel:
                text: 'Run FreeTrackNoIR at game start (if installed)'
                settings_name: 'run_facetracknoir'

            Label:
                text: 'Basic options:'
                size_hint: None, None
                size: self.texture_size[0], 50

            CheckStringLabel:
                text: 'Profile name'
                settings_name: 'arma_name'

            CheckStringLabel:
                text: 'Unit name'
                settings_name: 'arma_unit'

            CheckLabel:
                text: 'Force 64-bit Arma executable'
                settings_name: 'arma_win64'

            Label:
                text: 'Advanced options:'
                size_hint: None, None
                size: self.texture_size[0], 50

            CheckLabel:
                text: 'Show script errors'
                settings_name: 'arma_showScriptErrors'

            CheckLabel:
                text: 'No Pause'
                settings_name: 'arma_noPause'

            CheckLabel:
                text: 'Force window mode'
                settings_name: 'arma_window'

            CheckLabel:
                text: 'Check signatures at start'
                settings_name: 'arma_checkSignatures'

            CheckLabel:
                text: 'Allow file patching'
                settings_name: 'arma_filePatching'

            CheckStringLabel:
                text: 'Mission file (editor)'
                settings_name: 'arma_mission_file'
                hint_text: '<path to the file>'
