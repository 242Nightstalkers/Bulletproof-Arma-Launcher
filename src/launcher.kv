#
# Section: defaults for widgets
#

<HoverButton>
    border: 1,1,1,1
    size_hint: None, None
    size: 100, 50
    padding_y: 20

    color: self.color_normal
    background_color: self.bgcolor_normal

    background_normal: ''
    background_down: ''
    background_disabled_normal: ''
    background_disabled_down: ''

    #color_hover: [1, 0, 0.66, 1]
    #color_normal: [1, 1, 1, 1]

    bgcolor_normal: [0.15, 0.15, 0.15, 0.5]
    bgcolor_hover: [0.20, 0.20, 0.20, 0.5]

    font_name: app.resource_path("fonts/Nexa_Bold.otf")
    font_size: 28

# This has to be here because fonts in included DynamicClasses don't work
# for some reason
<MorePlayButton@HoverButton>
    text: '=' # \u2261 or 2630 For android character
    font_name: app.resource_path("fonts/Equality.ttf")
    width: 75

#:include kv/mainwidget.kv
#:include kv/installscreen.kv
#:include kv/prefscreen.kv
